# テスト用なので後で消しても良いです (methodに同じルールあり)

PREFIX rule: <tag:stardog:api:rule:> 

# インドには危険な毒蛇がいる（常識ルール）
kd:India kgc:have kd:snake.
kd:snake kgc:hasProperty kd:poisonous.

# ロイロットはインドの動物を飼っている
[] a rule:SPARQLRule ; 
rule:content """ 
PREFIX kd: <http://kgc.knowledge-graph.jp/data/SpeckledBand/> 
PREFIX kgc: <http://kgc.knowledge-graph.jp/ontology/kgc.owl#>
PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX owl: <http://www.w3.org/2002/07/owl/#>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>
IF { 
    # ?aはインドの動物が好き
    kd:27 kgc:subject ?a;
        kgc:hasPredicate <http://kgc.knowledge-graph.jp/data/predicate/like>;
        kgc:what kd:animal_of_India.
    # ?bはインドの動物を買う
    kd:28 kgc:subject ?b;
        kgc:hasPredicate <http://kgc.knowledge-graph.jp/data/predicate/buy>;
        kgc:what kd:animal_of_India.
    filter(?a=?b).
    } THEN { 
    # ?aはインドの動物を飼っている
	?a kgc:have kd:animals_in_India.
        } 
""". 

# ロイロットはインドの毒蛇を飼っている
[] a rule:SPARQLRule ;
rule:content """ 
PREFIX kd: <http://kgc.knowledge-graph.jp/data/SpeckledBand/> 
PREFIX kgc: <http://kgc.knowledge-graph.jp/ontology/kgc.owl#>
PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX owl: <http://www.w3.org/2002/07/owl/#>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>
IF { 
    # ?xは?aを訓練している
    ?id kgc:what ?a;
        kgc:hasPredicate <http://kgc.knowledge-graph.jp/data/predicate/train>;
        kgc:subject ?x.
    # ?xはインドの動物を飼っている
    ?x kgc:have kd:animals_in_India.
    # インドには?aがいる
    kd:India kgc:have ?a.
    } THEN { 
    # ?xはインドの?aを飼っている
    ?x kgc:have ?a.
    ?a kgc:isFrom kd:India.
        } 
""". 