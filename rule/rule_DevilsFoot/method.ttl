PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>
IF { 
    {
    # ブレンダの死因は中毒死である
    kd:Brenda kgc:die kd:poisoning.
    # モーティマーは魔足根を持っている
    ?y kgc:have ?a.
    }union{
    ?y kgc:have ?a.
    # 魔足根は人を殺せる
    kd:Magic_foot kgc:canKill kd:Human.
    }
    } THEN { 
    ?y kgc:canMurder kd:Brenda.
    } 
""". 

